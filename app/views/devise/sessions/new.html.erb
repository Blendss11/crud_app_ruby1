<section class="flex items-center justify-center min-h-screen bg-white">
  <div class="relative flex flex-col m-6 space-y-8 bg-white shadow-2xl rounded-2xl md:flex-row md:space-y-0">
    <!-- Left side -->
    <div class="flex flex-col justify-center p-8 md:p-14">
      <h2 class="text-center text-4xl font-bold text-black">Login</h2>
      <p class="font-light text-gray-800 mb-8 text-center">Belum punya akun? <a href="<%= new_registration_path(resource_name) %>" class="text-blue-500 hover:text-blue-700">Daftar</a></p>

      <div class="form-container align-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="py-4">
            <span class="mb-2 text-md text-black">Email</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded-md placeholder:font-light placeholder:text-gray-500" %>
          </div>

          <div class="py-4">
            <span class="mb-2 text-md text-black">Password</span>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border border-gray-300 rounded-md placeholder:font-light placeholder:text-gray-500" %>
          </div>

          <div class="flex justify-between w-full py-4">
            <div class="mr-24">
              <%= f.check_box :remember_me, class: "mr-2" %>
              <span class="text-md text-black">Ingat saya</span>
            </div>
            <a href="<%= new_password_path(resource_name) %>" class="font-bold text-md text-blue-500 hover:text-blue-700">Lupa password?</a>
          </div>

          <div class="actions py-4">
            <%= f.submit 'Login', class: "w-full bg-blue-500 text-black p-2 rounded-lg hover:bg-blue-700 border border-blue-500" %>
          </div>
        <% end %>
      </div>

      <div class="text-center text-gray-800">
        Belum punya akun?
        <a href="<%= new_registration_path(resource_name) %>" class="font-bold text-blue-500 hover:text-blue-700">Daftar</a>
      </div>
    </div>

    <!-- Right side -->
    <div class="relative">
      <img
        src="/image.jpg"
        alt="img"
        class="w-[400px] h-full hidden rounded-r-2xl md:block object-cover"
      />
      <!-- text on image  -->
      <div
        class="absolute hidden bottom-10 right-6 p-6 bg-white bg-opacity-30 backdrop-blur-sm rounded drop-shadow-lg md:block"
      >
        <span class="text-black text-xl">
          We've been using Untitle to kick<br />start every new project and
          can't <br />imagine working without it.
        </span>
      </div>
    </div>
  </div>
</section>
