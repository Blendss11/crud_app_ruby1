<p style="color: green"><%= notice %></p>

<h1>CRUD Lists</h1>
<br/>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @crud_lists.each.with_index(1) do |crud_list, index| %>
      <tr>
          <td><%= index %></td>
        <td><%= crud_list.first_name %></td>
        <td><%= crud_list.last_name %></td>
        <td><%= crud_list.email %></td>
        <td><%= crud_list.phone %></td>
        <td><%= crud_list.twitter %></td>
        <td class="text-center"><%= link_to "Show", crud_list, class:"btn btn-primary" %></td>
        <td class="text-center"><%= link_to "Edit", edit_crud_list_path(crud_list), class:"btn btn-warning" %></td>
        <td class="text-center"><%= link_to "Destroy", crud_list, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New crud list", new_crud_list_path, class: "btn btn-secondary" %>
